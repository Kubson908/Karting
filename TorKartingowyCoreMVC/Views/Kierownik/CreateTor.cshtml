@model Tor

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Dodaj tor</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Rodzaj"></label>
            <input asp-for="Rodzaj" class="form-control" />
            <span asp-validation-for="Rodzaj" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pojemnosc"></label>
            <input type="number" asp-for="Pojemnosc" class="form-control" />
            <span asp-validation-for="Pojemnosc" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Zapisz</button>
        <a asp-controller="Kierownik" asp-action="ListaGokartow" class="btn btn-secondary" style="width:150px">
            Wróć
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
