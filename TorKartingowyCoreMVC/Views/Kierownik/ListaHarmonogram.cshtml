@model IEnumerable<Harmonogram>
@{
    ViewData["Title"] = "Lista harmonogramów";
}

<div class="container p-3">
    <a asp-controller="Kierownik" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Wróć
    </a>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista harmonogramów</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kierownik" asp-action="CreateHarmonogram" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Nowy harmonogram
            </a>
        </div>
    </div>
</div>
<div class="w-100 d-flex justify-content-center text-center">
    <table class="table m-3 w-100 table-bordered table-striped">
        @foreach (var obj in Model)
        {
            <tr class="col-md-12">
                <td>
                    <div class="float-lg-start d-inline" style="font-size:large;padding-left: 10%;">
                        @obj.OdKiedy
                    </div>
                    
                    <div class="float-end btn-group">
                        <a asp-controller="Kierownik" asp-action="HarmonogramDetails" asp-route-data="@obj.OdKiedy" class="btn btn-secondary p-1">
                            <i class="bi bi-book-half"></i>Szczegóły
                        </a>&nbsp;
                        <a asp-controller="Kierownik" asp-action="DeleteHarmonogram" asp-route-data="@obj.OdKiedy" class="btn btn-danger p-1">
                            &nbsp;&nbsp;&nbsp;<i class="bi bi-trash3"></i>Usuń&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                    
                </td>
            </tr>
        }
    </table>
</div>

