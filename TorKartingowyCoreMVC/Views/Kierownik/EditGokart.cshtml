@model Gokart

<form method="post">
<input hidden asp-for="Numer" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edytuj gokarta</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Typ"></label>
            <select asp-for="Typ" class="form-control">
                <option value="">--Typ--</option>
                <option value="Spalinowy">Spalinowy</option>
                <option value="Dla dzieci">Dla dzieci</option>
                <option value="Elektryczny">Elektryczny</option>
            </select>
            <span asp-validation-for="Typ" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Zapisz</button>
        <a asp-controller=@User.Claims.FirstOrDefault(c => c.Type == "Role").Value asp-action="ListaGokartow" class="btn btn-secondary" style="width:150px">
            Wróć
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
