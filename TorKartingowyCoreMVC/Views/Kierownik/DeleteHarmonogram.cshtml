@model Harmonogram

<form method="post" asp-action="DeleteHarmonogramPOST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Usuwanie harmonogramu</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="OdKiedy"></label>
            <input asp-for="OdKiedy" disabled class="form-control" />
            <input asp-for="OdKiedy" hidden />
        </div>
        <div>
            @{var base64 = Convert.ToBase64String(Model.ListaGodzin);}
            @{var img = string.Format("data:image/jpg;base64,{0}", base64);}
            <img src="@img" />
        </div>
        <br />
        <button type="submit" class="btn btn-danger float-end" style="width:150px">Usuń</button>
        <a asp-controller="Kierownik" asp-action="ListaHarmonogram" class="btn btn-secondary" style="width:150px">
            Wróć
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
