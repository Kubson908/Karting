@model IEnumerable<Pracownik>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-0">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista pracowników</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kierownik" asp-action="Index" class="btn btn-secondary m-1">
                 Wróć
            </a>
            <a asp-controller="Kierownik" asp-action="CreatePracownik" class="btn btn-primary m-1">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj pracownika
            </a>
        </div>
    </div>
    <div class="table-responsive" style="max-width:91vw">
        <table class="table table-striped table-bordered border-secondary table-hover">
            <thead>
                <tr class="table-active">
                    <th>Numer pracownika</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Stanowisko</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th>Pensja</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="7%">
                            @obj.Id
                        </td>
                        <td>
                            @obj.Imie
                        </td>
                        <td>
                            @obj.Nazwisko
                        </td>
                        <td>
                            @obj.Stanowisko
                        </td>
                        <td>
                            @obj.Email
                        </td>
                        <td>
                            @obj.Telefon
                        </td>
                        <td>
                            @obj.Pensja.ToString("0.00") zł
                        </td>
                        <td width="15%" class="m-0">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Kierownik" asp-action="EditPracownik" asp-route-id="@obj.Id" class="btn btn-secondary p-1">
                                    <i class="bi bi-pen"></i>Edytuj
                                </a>
                                &nbsp;
                                <a asp-controller="Kierownik" asp-action="DeletePracownik" asp-route-id="@obj.Id" class="btn btn-danger p-1">
                                    <i class="bi bi-trash3"></i>Usuń
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
