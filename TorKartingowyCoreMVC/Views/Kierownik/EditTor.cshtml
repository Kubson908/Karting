@model Tor

<form method="post">
    <input hidden asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edytuj tor</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Rodzaj"></label>
            <select asp-for="Rodzaj" class="form-control">
                <option value="">--Rodzaj--</option>
                <option value="Kryty">Kryty</option>
                <option value="Odkryty">Odkryty</option>
            </select>
            <span asp-validation-for="Rodzaj" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pojemnosc"></label>
            <input type="number" asp-for="Pojemnosc" class="form-control" />
            <span asp-validation-for="Pojemnosc" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Zapisz</button>
        <a asp-controller="Kierownik" asp-action="ListaTorow" class="btn btn-secondary" style="width:150px">
            Wróć
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
