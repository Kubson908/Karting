@model IEnumerable<Gokart>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista gokartów</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kierownik" asp-action="Index" class="btn btn-secondary m-1">
                 Wróć
            </a>
            <a asp-controller="Kierownik" asp-action="CreateGokart" class="btn btn-primary m-1">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj gokarta
            </a>
        </div>
    </div>
</div>
<div class="table-responsive" style="max-width:91vw;">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Numer gokarta</th>
                <th>Typ</th>
                <th>Model</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="5%">
                        @obj.Numer
                    </td>
                    <td>
                        @obj.Typ
                    </td>
                    <td>
                        @obj.Model
                    </td>
                    <td width="40%" class="m-0 text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Kierownik" asp-action="EditGokart" asp-route-id="@obj.Numer" class="btn btn-secondary p-1">
                                <i class="bi bi-pen"></i>Edytuj
                            </a>
                            &nbsp;
                            <a asp-controller="Kierownik" asp-action="DeleteGokart" asp-route-id="@obj.Numer" class="btn btn-danger p-1">
                                <i class="bi bi-trash3"></i>Usuń
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

