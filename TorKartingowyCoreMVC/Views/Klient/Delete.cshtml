@model Klient

<form method="post" asp-action="DeletePOST">
    <input asp-for="Numer" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Usuwanie klienta</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Imie"></label>
            <input asp-for="Imie" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Nazwisko"></label>
            <input asp-for="Nazwisko" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Telefon"></label>
            <input asp-for="Telefon" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <input asp-for="Haslo" disabled hidden class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Usuń</button>
        <a asp-controller="Klient" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Wróć
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
