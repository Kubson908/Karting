@model IEnumerable<Klient>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista klientów</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Klient" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj klienta
            </a>
        </div>
    </div>
</div>
<div class="w-100 d-flex justify-content-center text-center">
    <table class="table table-bordered table-striped" style="width: 90%">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th width="20%">E-mail</th>
                <th width="15%">Telefon</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Imie
                    </td>
                    <td>
                        @obj.Nazwisko
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Telefon
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Klient" asp-action="Edit" asp-route-id="@obj.Numer" class="btn btn-secondary p-1">
                                <i class="bi bi-pen"></i>Edytuj</a>
                                &nbsp;
                            <a asp-controller="Klient" asp-action="Delete" asp-route-id="@obj.Numer" class="btn btn-danger p-1">
                                <i class="bi bi-trash3"></i>Usuń
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
