@model IEnumerable<Serwis>
@{
    ViewData["Title"] = "Lista serwisow";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista serwisów</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller=@User.Claims.FirstOrDefault(c => c.Type == "Role").Value asp-action="CreateSerwis" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj serwis
            </a>
        </div>
    </div>
</div>
<div class="w-100 text-center">
    <form method="get" asp-action="ListaSerwisow">
        <input type="search" placeholder="Wyszukaj" value="@ViewData["GetSerwis"]" name="searchFilter" class="form-control d-inline mt-3 w-25" />
        <input type="submit" value="Wyszukaj" class="btn btn-primary" />
        <a asp-action="ListaSerwisow">Wszystkie serwisy</a>
    </form>
</div>
<div class="w-100 d-flex justify-content-center">
    <table class="table table-bordered table-striped bg-white" style="width: 90%;">
        <thead>
            <tr>
                <th width="7%">Numer serwisu</th>
                <th width="7%">Numer gokarta</th>
                <th>Data utworzenia</th>
                <th>Usterka</th>
                <th>Wykonano</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr style="font-size: 20px;" class="align-middle text-center">
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.GokartNumer
                    </td>
                    <td>
                        @obj.DataUtworzenia
                    </td>
                    <td>
                        @obj.Usterka
                    </td>
                    @if(obj.Wykonano == true)
                    {
                        <td>&#10004;</td>
                    } else
                    {
                        <td>&#10060;</td>
                    }
                    <td>
                        <a asp-controller=@User.Claims.FirstOrDefault(c => c.Type == "Role").Value asp-action="UpdateSerwis" asp-route-id="@obj.Id" class="btn btn-info">Aktualizuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
