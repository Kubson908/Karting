@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en" style="position:relative;min-height:100% ">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TorKartingowyCoreMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootswatchTheme.css"/>
    <link rel="stylesheet" href="~/TorKartingowyCoreMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body class="bg-light" style="margin-bottom:60px;">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <div class="navbar-brand sticky-top mt-2" style="position: absolute;left:50%;transform:translateX(-50%)">
                    
                     <h3>Tor Kartingowy</h3>
                </div>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav me-auto">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:15px;">
                            <svg width="38" height="38" fill="White" class="bi bi-person-fill " viewBox="0 0 16 16" style="margin: 0 20">
                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
                            </svg>
                            <span class="visually-hidden">(current)</span>
                        </a>
                        <a class="nav-item nav-link mt-1" asp-area="" asp-controller="Access" asp-action="Login">Kontakt</a>
                    </div>
                    <div class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="text-white" style="padding: var(--bs-nav-link-padding-y) var(--bs-nav-link-padding-x);">Witaj @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier).Value</div>
                            <div class="nav-item dropdown">
                                <a data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    <svg width="38" height="38" fill="White" class="bi bi-person-fill" viewBox="0 0 16 16" style="margin: 0 20">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                                    </svg>
                                </a>
                                <div class="dropdown-menu" style="left: -112%;top: 105%;">
                                    <a class="dropdown-item" asp-controller="Klient" asp-action="Rezerwuj1">Rezerwuj</a>
                                    <a class="dropdown-item" asp-controller="Klient" asp-action="ListaRezerwacji">Twoje Rezerwacje</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LogOut">Wyloguj</a>
                                    
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="nav-item nav-link" asp-area="" asp-controller="Access" asp-action="Login">Zaloguj</a>
                            <a class="nav-link" asp-area="" asp-controller="Access" asp-action="Register" >Zarejestruj</a>
                        }
                    </div>
                </div>
                
                
            </div>
        </nav>
        
    </header>
    
    <main role="main" class="container d-flex justify-content-center">
        <partial name="_Notification" />
        <div class=" justify-content-center pt-2" >
            @RenderBody()
        </div>
    </main>
        
    <footer class="footer bg-primary" style="bottom:0;position:absolute;width:100%;height:60px;line-height:60px;">
        <div class=container>
            <div class="nav-item d-inline-block">
                &copy; 2023 - TorKartingowyCoreMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link d-inline">Privacy</a>
            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="nav-item dropdown d-inline-block dropup" style="float: right">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Panel pracownika</a>
                    <div class="dropdown-menu" >
                        <a class="dropdown-item" style=""asp-area="" asp-controller="PracownikAccess" asp-action="Login">Zaloguj</a>
                    </div>
                </div>
            }
        </div>

    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
