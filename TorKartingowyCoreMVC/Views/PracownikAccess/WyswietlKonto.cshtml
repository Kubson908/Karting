@model Pracownik
@{
    ViewData["Title"] = "Konto";
}

<h1 class="text-center">Konto</h1>
<table style="font-size: 20px;">
    <tr>
        <td class="text-end">Imię:  &nbsp;</td>
        <td>@Model.Imie </td>
    </tr>
    <tr>
        <td class="text-end">Nazwisko:  &nbsp;</td>
        <td>@Model.Nazwisko </td>
    </tr>
    <tr>
        <td class="text-end">Email:  &nbsp;</td>
        <td>@Model.Email </td>
    </tr>
    <tr>
        <td class="text-end">Telefon:  &nbsp;</td>
        <td>@Model.Telefon </td>
    </tr>
    <tr>
        <td class="text-end">Stanowisko: &nbsp;</td>
        <td>@Model.Stanowisko</td>
    </tr>
</table>
<div>
    @{
        var stanowisko = Model.Stanowisko;
        if (stanowisko == "Sprzętowiec") stanowisko = "Sprzetowiec";
    }
    <a class="btn btn-secondary m-2 float-start w-25 p-2 pt-3 pb-3" asp-controller="@stanowisko" asp-action="Index">Wróć</a>
    <a class="btn btn-info m-2 w-25 float-end" asp-action="ChangePassword" asp-route-id="@Model.Id" style="line-height:normal;">Zmiana hasła</a>
</div>





