@model Pracownik
@{
    ViewData["Title"] = "Konto";
}

<h1 class="text-center">Konto</h1>
<table style="font-size: 20px;">
    <tr>
        <td class="text-end">Imię:  &nbsp;</td>
        <td>@Model.Imie </td>
    </tr>
    <tr>
        <td class="text-end">Nazwisko:  &nbsp;</td>
        <td>@Model.Nazwisko </td>
    </tr>
    <tr>
        <td class="text-end">Email:  &nbsp;</td>
        <td>@Model.Email </td>
    </tr>
    <tr>
        <td class="text-end">Telefon:  &nbsp;</td>
        <td>@Model.Telefon </td>
    </tr>
    <tr>
        <td class="text-end">Stanowisko: &nbsp;</td>
        <td>@Model.Stanowisko</td>
    </tr>
</table>
<div class="text-center">
    <a class="btn btn-secondary m-2 float-start w-25 p-2 pt-3 pb-3" asp-action="Index">Wróć</a>
    <a class="btn btn-secondary m-2 w-25" asp-action="ChangePassword" asp-route-id="@Model.Numer" style="line-height:normal;">Zmiana hasła</a>
    <a asp-controller="Klient" asp-action="EdytujKonto" asp-route-id="@Model.Numer" class="btn btn-primary m-2 float-end w-25" style="width:100px; line-height:normal;">
        Edytuj Dane
    </a>
</div>





